{
  "name": "hkrecruitment",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=22",
    "pnpm": "10.19.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src",
    "pretty": "prettier --check 'src/**/*' '*.{ts,mjs,js}'",
    "pretty:fix": "prettier --write 'src/**/*' '*.{ts,mjs,js}'",
    "db:push": "drizzle-kit push",
    "db:seed": "pnpm exec tsx src/db/seed.ts",
    "db:reset": "pnpm dlx tsx src/db/reset.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
